<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="controller.CotisationsController" spacing="15" style="-fx-padding: 15;">
    
    <Label text="Gestion des Cotisations" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    
    <TableView fx:id="cotisationsTable" prefHeight="300" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="adherentColumn" text="Adhérent" prefWidth="200"/>
            <TableColumn fx:id="montantColumn" text="Montant" prefWidth="100"/>
            <TableColumn fx:id="statutColumn" text="Statut" prefWidth="150"/>
        </columns>
    </TableView>
    
    <Separator/>
    
    <Label text="Ajouter/Payer Cotisation" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="10" style="-fx-padding: 10;">
        <Label text="Adhérent :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="adherentCombo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Montant :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Spinner fx:id="montantSpinner" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Date Paiement :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="datePaiementPicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
    
    <HBox spacing="10">
        <Button fx:id="addButton" text="Ajouter" style="-fx-padding: 10;"/>
        <Button fx:id="payButton" text="Marquer comme Payée" style="-fx-padding: 10;"/>
        <Button fx:id="deleteButton" text="Supprimer" style="-fx-padding: 10;"/>
    </HBox>
</VBox>
